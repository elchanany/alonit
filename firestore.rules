rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin or oak level
    function isAdmin() {
      return request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'admin', 'moderator'] ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.level == 'oak');
    }
    
    // Helper function to check if user is authenticated
    function isAuth() {
        return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow create: if isAuth() && request.auth.uid == userId;
      allow update: if isAuth() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Questions collection
    match /questions/{questionId} {
      allow read: if true;
      allow create: if isAuth();
      // Allow update/delete if owner OR admin
      allow update, delete: if isAuth() && (request.auth.uid == resource.data.authorId || isAdmin());
      
      // Answers subcollection
      match /answers/{answerId} {
        allow read: if true;
        allow create: if isAuth();
        allow update, delete: if isAuth() && (request.auth.uid == resource.data.authorId || isAdmin());
      }
    }
    
    // Admin Actions Logs
    match /admin_actions/{logId} {
        allow read: if isAdmin();
        allow create: if isAdmin();
    }
    
    // Notifications
    match /notifications/{notificationId} {
        allow create: if isAdmin();
        allow read: if isAuth() && request.auth.uid == resource.data.recipientUid;
        allow update: if isAuth() && request.auth.uid == resource.data.recipientUid; // For marking as read
        allow delete: if isAuth() && request.auth.uid == resource.data.recipientUid;
    }
  }
}
